<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Event Name:"
                    android:textSize="14sp"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:id="@+id/send_event_name"
                    android:imeOptions="flagNoExtractUi"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Date:"
                    android:textSize="14sp"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:hint="Required"
                    android:inputType="date"
                    android:layout_height="wrap_content"
                    android:id="@+id/send_event_date"
                    android:imeOptions="flagNoExtractUi"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Start Time:"
                    android:textSize="14sp"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:hint="Required"
                    android:inputType="time"
                    android:layout_height="wrap_content"
                    android:id="@+id/send_event_start_time"
                    android:imeOptions="flagNoExtractUi"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="End Time:"
                    android:textSize="14sp"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:inputType="time"
                    android:layout_height="wrap_content"
                    android:id="@+id/send_event_end_time"
                    android:imeOptions="flagNoExtractUi"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Ticket Price:"
                    android:textSize="14sp"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:hint="(Leave blank for free)"
                    android:inputType="number"
                    android:layout_height="wrap_content"
                    android:id="@+id/send_event_tickets"
                    android:imeOptions="flagNoExtractUi"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Event Description:"
                    android:textSize="14sp"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences|textMultiLine"
                    android:id="@+id/send_event_description"
                    android:imeOptions="flagNoExtractUi"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Artist Name:"
                    android:textSize="14sp"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:hint="Required"
                    android:layout_height="wrap_content"
                    android:id="@+id/send_event_artist_name"
                    android:inputType="textCapWords"
                    android:imeOptions="flagNoExtractUi"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Artist Description:"
                    android:textSize="14sp"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:hint="Required"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences|textMultiLine"
                    android:id="@+id/send_event_artist_description"
                    android:imeOptions="flagNoExtractUi"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Artist Genre:"
                    android:textSize="14sp"/>
                <Spinner
                    android:id="@+id/spinner_artist_genre"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:entries="@array/genres"
                    android:entryValues="@array/genres_values"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Venue Name:"
                    android:textSize="14sp"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:hint="Required"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:id="@+id/send_event_venue_name"
                    android:imeOptions="flagNoExtractUi"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Venue Address:"
                    android:textSize="14sp"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:hint="Required"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords|textMultiLine"
                    android:id="@+id/send_event_venue_address"
                    android:imeOptions="flagNoExtractUi"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Contact no.:"
                    android:textSize="14sp"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:inputType="phone"
                    android:layout_height="wrap_content"
                    android:id="@+id/send_contact_number"
                    android:imeOptions="flagNoExtractUi"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Extra comments:"
                    android:textSize="14sp"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:hint="Add any comments here..."
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences|textMultiLine"
                    android:id="@+id/send_event_comments"
                    android:imeOptions="flagNoExtractUi"/>
            </TableRow>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="Any images you'd like us to use, please attach them at the email screen (next)."
                android:textSize="18sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_feedback_send"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Send"/>
                <Button
                    android:id="@+id/btn_feedback_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel"/>
            </LinearLayout>

        </TableLayout>


    </ScrollView>


</LinearLayout>